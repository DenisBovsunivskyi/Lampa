<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Lampa" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_bg_color</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
        <!-- Background color -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/main_bg_color</item>
    </style>
    <style name="Root">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="Scroll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:requiresFadingEdge">vertical</item>
        <item name="android:fillViewport">true</item>
    </style>

    <style name="Scroll.Vertical">
        <item name="android:fadingEdge">vertical</item>
    </style>
    <style name="CustomToolbarTheme" parent="Theme.Lampa">
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorPrimary">@color/black</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>
    <style name="TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="textAllCaps">true</item>
        <item name="tabTextColor">@color/tab_unselected_gray</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="MainNewsText" parent="Widget.AppCompat.TextView">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">3</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="MainNewsText.Black" parent="MainNewsText">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="MainNewsText.White" parent="MainNewsText">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>