<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Lampa" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
        <!-- Background color -->
        <item name="android:windowBackground">@color/transparent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/main_bg_color</item>
    </style>
    <style name="Root">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="Scroll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:requiresFadingEdge">vertical</item>
        <item name="android:fillViewport">true</item>
    </style>

    <style name="Scroll.Vertical">
        <item name="android:fadingEdge">vertical</item>
    </style>
</resources>